<section id="contentSection">
	<div class="row">
		<div class="col-lg-8 col-md-8 col-sm-8">
			<div class="left_content">
				<div class="single_page">
					<ol class="breadcrumb">
						<li><a href="/">Trang chủ</a></li>
						<li><a href="#">
								<%= data.post.category_name %>
							</a></li>
					</ol>
					<h1>
						<%= data.post.title %>
					</h1>
					<div class="post_commentbox"> <a href="#"><i class="fa fa-user"></i>
							<%= data.post.author %>
						</a> <span><i class="fa fa-calendar"></i>6:49 AM</span> <a href="#"><i class="fa fa-tags"></i>
							<%= data.post.category_name %>
						</a> </div>
					<div class="single_page_content"> <img class="img-center" src="/img/<%= data.post.image_url %>"
							alt="">
						<p>
							<%= data.post.subtitle %>
						</p>
					</div>
					<div class="social_link">
						<ul class="sociallink_nav">
							<li><a href="#"><i class="fa fa-facebook"></i></a></li>
							<li><a href="#"><i class="fa fa-twitter"></i></a></li>
							<li><a href="#"><i class="fa fa-google-plus"></i></a></li>
							<li><a href="#"><i class="fa fa-linkedin"></i></a></li>
							<li><a href="#"><i class="fa fa-pinterest"></i></a></li>
						</ul>
					</div>
					<div class="related_post">
						<h2>Bài viết liên quan<i class="fa fa-thumbs-o-up"></i></h2>
						<ul class="spost_nav wow fadeInDown animated">
							<% data.related_post.forEach((item)=> { %>
								<li>
									<div class="media"> <a class="media-left" href="/post/<%= item.post_id %>"> <img
												src="/img/<%= item.image_url %>" alt=""> </a>
										<div class="media-body"> <a class="catg_title" href="/post/<%= item.post_id %>">
												<%= item.title %>
											</a> </div>
									</div>
								</li>
								<% }) %>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<nav class="nav-slit"> <a class="prev" href="#"> <span class="icon-wrap"><i class="fa fa-angle-left"></i></span>
				<div>
					<h3>Con mel</h3>
					<img src="/img/habibi-cat.jpg" alt="" />
				</div>
			</a> <a class="next" href="#"> <span class="icon-wrap"><i class="fa fa-angle-right"></i></span>
				<div>
					<h3>hehe</h3>
					<img src="/img/flower-for-u-pookie.jpg" alt="" />
				</div>
			</a> </nav>
		<div class="col-lg-4 col-md-4 col-sm-4">
			<aside class="right_content">
				<div class="single_sidebar">
					<h2><span>BÀI VIẾT THỊNH HÀNH</span></h2>
					<ul class="spost_nav">
						<% layout.posts.slice(0,4).forEach((item)=> { %>
							<li>
								<div class="media wow fadeInDown"> <a href="/post/<%= item.post_id %>"
										class="media-left">
										<img alt="" src="/img/<%= item.image_url %>"> </a>
									<div class="media-body"> <a href="/post/<%= item.post_id %>" class="catg_title">
											<%= item.title %>
										</a> </div>
								</div>
							</li>
							<% }) %>
					</ul>
				</div>
				<div class="single_sidebar wow fadeInDown">
					<h2><span>DANH MỤC</span></h2>
					<select class="catgArchive">
						<option>Chọn danh mục</option>
						<% layout.categories.slice(0,10).forEach((item)=> { %>
							<option>
								<%= item.category_name %>
							</option>
							<% }) %>
					</select>
				</div>
			</aside>
		</div>
	</div>
</section>